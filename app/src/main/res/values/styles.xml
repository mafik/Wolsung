<resources>

    <!-- Base application theme. -->
    <style name="WolsungTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarTabStyle">@style/WolsungTabPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/WolsungTabPageIndicator</item>
        <item name="actionBarStyle">@style/WolsungActionBar</item>
    </style>


    <style name="WolsungActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/action_bar_background</item>
        <item name="android:background">@drawable/action_bar_background</item>
        <item name="android:textColor">#FFcccccc</item>
    </style>

    <style name="WolsungTabPageIndicator" parent="Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/wolsung_tab</item>
        <item name="android:textColor">#FFcccccc</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
